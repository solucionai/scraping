{
  "openapi": "3.1.0",
  "info": {
    "title": "Pesquisa Jurisprudência API",
    "version": "1.0.0",
    "description": "API para buscar jurisprudências com termos específicos."
  },
  "servers": [
    {
      "url": "https://web-production-2d25.up.railway.app"
    }
  ],
  "paths": {
    "/search": {
      "post": {
        "summary": "Buscar Jurisprudências",
        "operationId": "search",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "term": {
                    "type": "string",
                    "description": "O termo de busca a ser usado na pesquisa de jurisprudências."
                  }
                },
                "required": [
                  "term"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resultados da pesquisa",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "Resumo formatado da jurisprudência encontrada."
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
